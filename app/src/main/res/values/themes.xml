<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SplendorMobileGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/Widget.Material3.Button.ElevatedButton</item>

        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Button.Rounded</item>

        <item name="backgroundTint">@color/poppy</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="tint">@color/marian</item>
        <item name="iconTint">@color/marian</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>

    </style>
    <style name="ShapeAppearanceOverlay.App.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="BlueBackgroundButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/Widget.Material3.Button.ElevatedButton</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Button.Rounded</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/light_yellow</item>
        <item name="tint">@color/dark_blue</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>

</style>
</resources>