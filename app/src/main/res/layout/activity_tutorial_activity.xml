<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColor">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGroundColor">
        <TextView
            android:id="@+id/TitleSplendorGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/title_splendor"
            android:textColor="@color/yellow"
            android:textSize="32sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/SplendorDescription"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="0dp"
            android:justificationMode="inter_word"
            android:text="@string/splendor_description"
            android:textColor="@color/light_yellow"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleSplendorGame" />

        <TextView
            android:id="@+id/actions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/actions_title"
            android:textColor="@color/yellow"
            android:textSize="32sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SplendorDescription" />

        <TextView
            android:id="@+id/actions"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:justificationMode="inter_word"
            android:text="@string/actions_description"
            android:textColor="@color/light_yellow"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actions_title" />

        <TextView
            android:id="@+id/onboarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/onboarding_title"
            android:textColor="@color/yellow"
            android:textSize="32sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actions" />

        <TextView
            android:id="@+id/Onboarding_createRoom"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:text="@string/ob_createRoom"
            android:justificationMode="inter_word"
            android:textColor="@color/light_yellow"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_title" />

        <ImageView
            android:id="@+id/createRoomExample"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Onboarding_createRoom" />

        <TextView
            android:id="@+id/onboarding_joinRoom"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:text="@string/ob_joinRoom"
            android:justificationMode="inter_word"
            android:textColor="@color/light_yellow"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createRoomExample" />

        <ImageView
            android:id="@+id/joinRoomExample"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/join"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_joinRoom" />

        <ImageView
            android:id="@+id/gameplayExample"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/joinRoomExample"/>
        <TextView
            android:id="@+id/onboarding_gameplay"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="@string/ob_gameplay"
            android:textColor="@color/light_yellow"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameplayExample" />

        <TextView
            android:id="@+id/onboarding_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ob_enjoy"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_gameplay"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>